<div id="container">
	<div class="modulo" style="height: 280px;">
		<div class="left"  style="width:200px">
			<ul>
			<% @categories.each do |category| %>
				<li><%= category.title %></li>
			<%end%>
			</ul>
		</div>
		<div class="right last">
			<% @products.each do |product| %>
				<%= product.name %><br/>
			<%end%>
		</div>
	</div>
</div>
<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Image</th>
    <th>Points</th>
    <th>Points value</th>
    <th>Cuurency value</th>
    <th>Category</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= product.image %></td>
    <td><%= product.points_id %></td>
    <td><%= product.points_value %></td>
    <td><%= product.cuurency_value %></td>
    <td><%= product.category_id %></td>
    <td><%= product.active %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

