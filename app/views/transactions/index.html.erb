<h1>Listing transactions</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Account</th>
    <th>Transaction type code</th>
    <th>Points value</th>
    <th>Account from</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%= transaction.date %></td>
    <td><%= transaction.account_id %></td>
    <td><%= transaction.transaction_type_code %></td>
    <td><%= transaction.points_value %></td>
    <td><%= transaction.account_from_id %></td>
    <td><%= link_to 'Show', transaction %></td>
    <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
    <td><%= link_to 'Destroy', transaction, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

